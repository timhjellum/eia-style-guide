<script type="text/javascript">
		var chart,
		opts_world_capacity = {
			chart: {
				renderTo: 'world_capacity',
				zoomType: 'x',
                marginTop: 70,
				marginBottom: 85
			},
			credits: {
			  enabled: false
			},				
			title: {
				text: 'Changes in world crude production capacity and GDP, price of WTI crude oil',
				align: 'left',
				x: 0,
				y: 12,
				style:  {
				  color: 'black',
				  fontWeight: 'bold',
				  fontSize: '16px',
				  fontFamily: 'Arial'
				}
			},
			xAxis: {
				type: 'datetime',
				tickInterval: 365*24 * 3600 * 1000,
				lineColor: '#000000',
				labels: {
				  y: 20,
				  style: {
					color: 'black',
					fontFamily: 'Arial'
				  }
				},				
				plotBands: [{
					from: Date.parse('1/1/2003'),
					to: Date.parse('1/1/2009'),
					label: {
						text: 'Spare capacity < 2.5 million barrels'
					},
					color: '#efeded'
				}]
			},
			navigation: {
				buttonOptions: {
					y: 0
				}
			},
			labels: {
				items: [{
					html: 'percent change (year-on-year)', // Y Axis label
					style:  {
						left: -15,
						top: -25,
						color: '#5d9732',
						fontFamily: 'Arial'	
					} 
				},{
					html: 'dollars per barrel (real 2009 dollars)', // Y Axis label
					style:  {
						left: 460,
						top: -25,
						color: 'rgb(163, 51, 64)',
						fontFamily: 'Arial'							
					} 
				},
				{
				  html: '*World capacity = OPEC capacity plus non-OPEC production',
				  style:  {
					left:  '-20px',
					top:  '293px',
					color: 'gray',
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				},				
				{
				  html: 'Source: <a href="http://www.eia.gov/">U.S. Energy Information Administration</a>, <a href="http://thomsonreuters.com/">Thomson Reuters</a>',
				  style:  {
					left:  '-20px',
					top:  '305px',
					color: 'gray',
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				},
				{
				  html: 'Updated: Monthly | Last Updated: March 28, 2011',
				  style:  {
					left:  '-20px',
					top:  '317px',
					color: 'gray',					
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				}				
				
				]
			},
		   legend: {
			  enabled: true,
			  layout: 'horizontal',
			  align: 'center',
			  verticalAlign: 'bottom',	  
			  x: 0,
			  y: -30,
			  borderWidth: 0,
			  symbolPadding: 5,					
			  itemStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'none'
			  },
			  itemHoverStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'underline'
			  }
			},			
			tooltip: {
				style: { 
				  padding: 5,
				  fontFamily: 'Arial'
				},				
				formatter: function() {
					var d = new Date(this.x),
							quarter = ( d.getMonth() / 3) + 1
							val = {
               'world capacity*': this.y.toFixed(2) +' million barrels',
               'world GDP': '$' + this.y.toFixed(2) + ' per barrel'
            }[this.series.name];
						
					quarter = {1:'1st',2:'2nd',3:'3rd',4:'4th'}[quarter]
						
					return '<b>' + this.series.name + '</b><br/>' + quarter + ' quarter of '+ d.getFullYear() +'<br/>'  + val; 
				}
			},
			yAxis: [{ // Primary yAxis
                title: null,
				max:7,
				tickInterval: 1,
				labels: {
					style:{ 
						color: '#5d9732',
						fontFamily: 'Arial'
					}
				}
      }, { // Secondary yAxis
        title: null,
        opposite: true,
				max:140,
				tickInterval:20,
				labels: {
					style:{ 
						color: 'rgb(163, 51, 64)',
					    fontFamily: 'Arial'						
					}
				}
    	}],
			plotOptions: {
				series:{
					marker: {
						enabled: false
					}
				},
				column: {
					shadow:0,
					borderWidth:0
				},
				line: {
					shadow:0,
					lineWidth: 2,
					marker: {
						enabled: false,
						states: {
							hover: {
								enabled: true,
								radius: 4
							}
						}
					},
					states: {
						hover: {
							lineWidth: 2,
							marker: {
									radius: 1
							}
						}
					}
				}
			},
			exporting: {
				buttons:{
					printButton: {
						enabled: false
					}
				}
			},
			navigation: {
				buttonOptions: {
					y: 0
				}
			},				
			colors:[
				'#5D9732',
				'#0096d7',
				'#003953',
				'#a33340',
				'#bd732a',
				'#103203',
				'#ffc702'
			],
			series: []
		},
		series1 = {
			data: [],
			type: 'column',
			name: 'world capacity*',
			color: 'rgba(0, 150, 215, 1.0)'
		},
		series2 = {
			data: [],
			type: 'column',
			name: 'world GDP',
			color: 'rgba(0, 57, 83, 1.0)'
		},		
		series3 = {
			data: [],
			type: 'line',
			name: 'WTI crude oil prices',
			yAxis: 1,
			color: 'rgba(163, 51, 64, 1.0)'
		},
		breakLine = {
			data: [],
			type:'scatter',
			lineWidth: 1,
			color: '#7f7f7f',
			shadow: 0,
			showInLegend: false,
			yAxis: 1
		};
			
	$(window).load(function() {
		$.get( 'data.cfm?chart=world_capacity', function(data) {
			var vals = data.DATA,
					now = new Date(),
					tmp;
			
			$.each(vals, function(lineNo, items) {
				var date = Date.parse( parseInt(items[1])*3-2 +'/1/'+ items[0]),
					val1 = parseFloat(items[2]),
					val2 = parseFloat(items[3]),					
					val3 = parseFloat(items[4]),
					tmpDate = new Date(date);
					
				if( tmpDate <= now )
					 tmp = date;

				if ( !isNaN( date ) ) {
					series1.data.push( [date, val1] );
					series2.data.push( [date, val2] );
					series3.data.push( [date, val3] );
				}
			});
			
			opts_world_capacity.series.push(series1);
			opts_world_capacity.series.push(series2);
			opts_world_capacity.series.push(series3);

			chart = new Highcharts.Chart(opts_world_capacity);
				
			//get y axis min/max values to draw the vertical separator
			var extremes = chart.yAxis[1].getExtremes();
			
			breakLine.data = [[tmp, extremes.min], [tmp, extremes.max]];
			
			chart.addSeries( breakLine );
			
			chart.renderer.image('../..//global/images/icons/icon_interactive.gif', 625, 23, 69, 17)
			.add();
			
		},'json');
		
	});
	</script>

<div id="world_capacity"></div>