 	<script type="text/javascript">
		var chart,
		opts_opec_production = {
			chart: {
				renderTo: 'opec_production',
				zoomType: 'x',
				marginTop: 70,
				marginBottom: 75
			},
			credits: {
			  enabled: false
			},				
			title: {
				text: 'Non-OPEC crude oil production and WTI crude oil prices',
				align: 'left',
				x: 0,
				y: 15,
				style:  {
				  color: 'black',
				  fontWeight: 'bold',
				  fontSize: '16px',
				  fontFamily: 'Arial'
				}
			},
			xAxis: {
				type: 'datetime',
				tickInterval: 365*24 * 3600 * 1000,
				lineColor: '#000000',
				labels: {
				  y: 20,
				  style: {
					color: 'black',
					fontFamily: 'Arial'
				  }
				}					
			},
			navigation: {
				buttonOptions: {
					y: 0
				}
			},			
			labels: {
				items: [{
					html: 'million barrels per day change (year-on-year)', // Y Axis label
					style:  {
						left:  '-25px',
						top:  '-25px',
						color: '#5d9732',
						fontFamily: 'Arial'	
					} 
				},{
					html: 'Price per barrel (real 2009 dollars)', // Y Axis label
					style:  {
						left:  '410px',
						top:  '-25px',
						color: '#0096d7',
						fontFamily: 'Arial'	
					} 
				},
				{
				  html: 'Source: <a href="http://www.eia.gov/">U.S. Energy Information Administration</a>',
				  style:  {
					left:  '-20px',
					top:  '305px',
					color: 'gray',
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				},
				{
				  html: 'Updated: Monthly | Last Updated: March 28, 2011',
				  style:  {
					left:  '-20px',
					top:  '317px',
					color: 'gray',					
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				}				
				]
			}, 
		   legend: {
			  enabled: true,
			  layout: 'horizontal',
			  align: 'center',
			  verticalAlign: 'bottom',	  
			  y: -20,
			  borderWidth: 0,
			  symbolPadding: 5,					
			  itemStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'none'
			  },
			  itemHoverStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'underline'
			  }
			},				
			tooltip: {
				formatter: function() {
					var d = new Date(this.x),
							quarter = ( d.getMonth() / 3) + 1,
							th = {1:'1st',2:'2nd',3:'3rd',4:'4th'}[quarter],
							unit = {
               'non-OPEC production': ' million barrels per day',
               'WTI crude oil': ' per barrel'
            }[this.series.name],
						symbol = {
               'non-OPEC production': '',
               'WTI crude oil': '$'
            }[this.series.name];
						
					return '<b>' + this.series.name + '</b><br/>' + th + ' quarter of '+ d.getFullYear() +'<br/>'  + symbol + this.y.toFixed(2) + unit; 
				}
			},
			yAxis: [{ // Primary yAxis
                title: null,
				max:2,
				min:-1,
				tickInterval: .5,
				labels: {
					style:{ 
						color: '#5d9732',
						fontFamily: 'Arial'
					}
				}
      }, { // Secondary yAxis
        title: null,
        opposite: true,
				max:140,
				min:-70,
				tickInterval:35,
				labels: {
					style:{ 
						color: '#0096d7',
						fontFamily: 'Arial'
					},
					formatter: function(){
						if( this.value  < 0 ) return '';
						else return this.value;
					}
				}
    	}],

			plotOptions: {
				series:{
					marker: {
						enabled: false
					}
				},
				column: {
					shadow:0,
					borderWidth:0
				},
				line: {
					shadow:0,
					lineWidth: 2,
					marker: {
						enabled: false,
						states: {
							hover: {
								enabled: true,
								radius: 4
							}
						}
					},
					states: {
						hover: {
							lineWidth: 2,
							marker: {
									radius: 1
							}
						}
					}
				}
			},
			exporting: {
				buttons:{
					printButton: {
						enabled: false
					}
				}
			},
			navigation: {
				buttonOptions: {
					y: 0
				}
			},				
			colors:[
				'#5D9732',
				'#0096d7',
				'#003953',
				'#a33340',
				'#bd732a',
				'#103203',
				'#ffc702'
			],
			series: []
		},

		series1 = {
			data: [],
			type: 'column',
			name: 'non-OPEC production'
		},
		series2 = {
			data: [],
			type: 'line',
			name: 'WTI crude oil',
			yAxis: 1
		},
		breakLine = {
			data: [],
			type:'scatter',
			lineWidth: 1,
			color: '#7f7f7f',
			shadow: 0,
			dashStyle: 'shortdash', 
			showInLegend: false,
			yAxis: 1
		};
			
	$(window).load(function() {
		$.get( 'data.cfm?chart=non-opec_production', function(data) {
			var vals = data.DATA,
					now = new Date(),
					tmp;
			
			$.each(vals, function(lineNo, items) {
				var date = Date.parse( parseInt(items[1])*3-2 +'/1/'+ items[0]),
					val1 = parseFloat(items[2]),
					val2 = parseFloat(items[3]) || 0,
					tmpDate = new Date(date);
					
				if( tmpDate <= now )
					 tmp = date;

				if ( !isNaN( date ) ) {
					series1.data.push( [date, val1] );
					series2.data.push( [date, val2] );
				}
			});
			
			opts_opec_production.series.push(series1);
			opts_opec_production.series.push(series2);

			chart = new Highcharts.Chart(opts_opec_production);
				
			//get y axis min/max values to draw the vertical separator
			var extremes = chart.yAxis[1].getExtremes();

			breakLine.data = [[tmp, extremes.min], [tmp, extremes.max]];
			
			chart.addSeries( breakLine );
			
			chart.renderer.image('../..//global/images/icons/icon_interactive.gif', 575, 23, 69, 17)
			.add();
			
		},'json');
		
	});
	</script>
    
<div id="opec_production"></div>