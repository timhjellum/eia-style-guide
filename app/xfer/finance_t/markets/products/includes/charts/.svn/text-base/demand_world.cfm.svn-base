<script type="text/javascript">
		var chart,
		opts_nonoecd_demand_world = {
			chart: {
				renderTo: 'demand_world',
				zoomType: 'x',
                marginTop: 70,
				marginBottom: 80				
			},
			credits: {
			  enabled: false
			},				
			title: {
				text: 'World oil consumption, world GDP and WTI crude oil prices',
				align: 'left',
				x: 5,
				y: 20,
				style:  {
				  color: 'black',
				  fontWeight: 'bold',
				  fontSize: '16px',
				  fontFamily: 'Arial'
				}				
			},
			xAxis: {
				type: 'datetime',
				tickInterval: (365*24 * 3600 * 1000),
				startOnTick: true,
				min: Date.UTC(2001,1,1),
				lineColor: '#000000',
				labels: {
				  y: 20,
				  style: {
					color: 'black',
					fontFamily: 'Arial'
				  }
				}				
			},
			labels: {
				items: [{
					html: 'percent change (year-on-year)', // Y Axis label
					style:  {
						left: -15,
						top: -25,
						color: 'black',
						fontFamily: 'Arial'
					} 
				},{
					html: 'price per barrel (real 2009 dollars)', // Y Axis label
					style:  {
						left: 475,
						top: -25,
						color: 'rgb(189, 115, 42)',
						fontFamily: 'Arial'
					} 
				},
				{
				  html: 'Source: <a href="http://www.eia.gov/">U.S. Energy Information Administration</a>, <a href="http://thomsonreuters.com/">Thomson Reuters</a>',
				  style:  {
					left:  '-20px',
					top:  '303px',
					color: 'gray',
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				},
				{
				  html: 'Updated: Quarterly | Last Updated: April 14, 2011',
				  style:  {
					left:  '-20px',
					top:  '315px',
					color: 'gray',					
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				},				
		
				]
			},
		   legend: {
			  enabled: true,
			  layout: 'horizontal',
			  align: 'center',
			  verticalAlign: 'bottom',	  
			  x: 0,
			  y: -25,
			  borderWidth: 0,
			  symbolPadding: 5,					
			  itemStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'none'
			  },
			  itemHoverStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'underline'
			  }
			},			
			tooltip: {
				formatter: function() {
					var d = new Date(this.x),
							quarter = ( d.getMonth() / 3) + 1,
							val = {
               'world oil consumption': this.y.toFixed(1) + '% change',
			   'world GDP': this.y.toFixed(1) + '% change',
               'WTI crude oil': '$' + this.y.toFixed(2) + ' per barrel'
            }[this.series.name];
						
					//quarter = {1:'1st',2:'2nd',3:'3rd',4:'4th'}[quarter];
					
					return '<b>' + this.series.name + '</b><br/>' + d.getFullYear() + ', quarter ' + quarter + '<br/>' + val; 
				}
			},
						yAxis: [{ // Primary yAxis
                title: null,
				tickInterval: 2,				
				labels: {
					style:{ 
						color: 'black',
						fontFamily: 'Arial'
					}
				}
      }, { // Secondary yAxis
        title: null,
        opposite: true,
				max:125,
				min:-125,
				labels: {
					style:{ 
						color: 'rgb(189, 115, 42)',
						fontFamily: 'Arial'
					},
					formatter: function(){
						if( this.value  < 0 ) return '';
						else return this.value;
					}
				}
    	}],
			plotOptions: {
				column: {
					shadow:0,
					borderWidth:0
				},
				line: {
					shadow:0,
					lineWidth: 2,
					marker: {
						enabled: false,
						states: {
							hover: {
								enabled: true,
								radius: 4
							}
						}
					},
					states: {
						hover: {
							lineWidth: 2,
							marker: {
									radius: 1
							}
						}
					}
				}
			},
			exporting: {
				buttons:{
					printButton: {
						enabled: false
					}
				}
			},
			navigation: {
				buttonOptions: {
					y: 0
				}
			},				
			colors:[
				'#5D9732',
				'#0096d7',
				'#a33340',
				'#003953',
				'#bd732a',
				'#103203',
				'#ffc702'
			],
		/* standard color palette: 
		rgba(93, 151, 50, 1.0) //green
		rgba(0, 150, 215, 1.0)  //light blue
		rgba(0, 57, 83, 1.0)  //dark blue
		rgba(163, 51, 64, 1.0)  //red
		rgba(189, 115, 42, 1.0)  //tan
		rgba(64, 50, 3, 1.0)  //brown
		rgba(255, 199, 2, 1.0)  //yellow
		*/				
			series: []
		},
		consumptionSeries= {
			data: [],
			type: 'column',
			color: 'rgba(163, 51, 64, 1.0)',
			name: 'world oil consumption',
			yAxis:0
		},
		worldGDP= {
			data: [],
			type: 'column',
			color: 'rgba(0, 150, 215, 1.0)',
			name: 'world GDP',
			yAxis:0
		},		
		wtiSeries= {
			data: [],
			type: 'line',
			color: 'rgba(189, 115, 42, 1.0)',
			name: 'WTI crude oil',
			yAxis: 1
		},
		breakLine = {
			data: [],
			type:'scatter',
			lineWidth: 1,
			color: '#7f7f7f',
			dashStyle: 'shortdash',        
			shadow: 0,
			showInLegend: false,
			yAxis: 1
		};
			
	$(window).load(function() {
		$.get( 'data.cfm?chart=growth_world', function(data) {
			var vals = data.DATA,
					now = new Date(),
					tmp;
					
			$.each(vals, function(lineNo, items) {
					var date = Date.parse( parseInt(items[1])*3-2 +'/1/'+ items[0]),
					consumption = parseFloat(items[2]) || 0,
					gdp = parseFloat(items[3]) || 0,
					wti = parseFloat(items[4]) || 0,
					tmpDate = new Date(date);
					
				if( tmpDate <= now )
					 tmp = date;
					 
				if ( !isNaN( date ) ) {
					consumptionSeries.data.push( [date, consumption] );
					worldGDP.data.push( [date, gdp] );
					wtiSeries.data.push( [date, wti] );
				}
			});
			
			opts_nonoecd_demand_world.series.push(consumptionSeries);
			opts_nonoecd_demand_world.series.push(worldGDP);
			opts_nonoecd_demand_world.series.push(wtiSeries);
			
			chart = new Highcharts.Chart(opts_nonoecd_demand_world);
				
			//get y axis min/max values to draw the vertical separator
			var extremes = chart.yAxis[1].getExtremes();
			
			breakLine.data = [[tmp, extremes.min], [tmp, extremes.max]];
			
			chart.addSeries( breakLine );
			
			chart.renderer.image('../..//global/images/icons/icon_interactive.gif', 625, 23, 69, 17)
			.add();
			
			},'json');

	});
	</script>

<div id="demand_world"></div>