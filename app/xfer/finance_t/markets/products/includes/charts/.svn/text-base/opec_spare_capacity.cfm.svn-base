					left:  '-20px',
					top:  '303px',
					color: 'gray',
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				},
				{
				  html: 'Updated: Monthly | Last Updated: April 14, 2011',
				  style:  {
					left:  '-20px',
					top:  '315px',
					color: 'gray',					
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				}				
				
				]
			},
		   legend: {
			  enabled: true,
			  layout: 'horizontal',
			  align: 'center',
			  verticalAlign: 'bottom',	  
			  x: 0,
			  y: -25,
			  borderWidth: 0,
			  symbolPadding: 5,					
			  itemStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'none'
			  },
			  itemHoverStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'underline'
			  }
			},			
			tooltip: {
				formatter: function() {
					var d = new Date(this.x),
							quarter = ( d.getMonth() / 3) + 1
							val = {
               'OPEC spare capacity': this.y.toFixed(2) +' million barrels',
               'WTI crude oil prices': '$' + this.y.toFixed(2) + ' per barrel'
            }[this.series.name];
						
					//quarter = {1:'1st',2:'2nd',3:'3rd',4:'4th'}[quarter]
						
					return '<b>' + this.series.name + '</b><br/>' + d.getFullYear() + ', quarter ' + quarter +'<br/>'  + val; 
				}
			},
			yAxis: [{ // Primary yAxis
                title: null,
				max:7,
				tickInterval: 1,
				labels: {
					style:{ 
						color: 'rgb(0, 150, 215)',
						fontFamily: 'Arial'
					}
				}
      }, { // Secondary yAxis
        title: null,
        opposite: true,
		        min: 0,
				max:140,
				tickInterval:20,
				labels: {
					style:{ 
						color: 'rgb(189, 115, 42)',
					    fontFamily: 'Arial'						
					}
				}
    	}],
			plotOptions: {
				series:{
					marker: {
