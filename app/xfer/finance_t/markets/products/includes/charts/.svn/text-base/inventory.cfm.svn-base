<script type="text/javascript">
	    var chart,
			opts_inventory = {
			chart: {
				renderTo: 'inventory',
				zoomType: 'x',
                marginTop: 70,
				marginBottom: 85					
			},
			credits: {
			  enabled: false
			},				
			title: {
				text: 'OECD inventories and WTI futures spread ', //chart title 
				align: 'left',
				x: 5,
				y: 20,
				style:  {
				  color: 'black',
				  fontWeight: 'bold',
				  fontSize: '16px',
				  fontFamily: 'Arial'
				}
			},
			xAxis: {
				type: 'datetime',
				tickInterval: 365 * 24 * 3600 * 1000,
				lineColor: '#000000',
				labels: {
				  y: 20,
				  style: {
					color: 'black',
					fontFamily: 'Arial'
				  }
				}				
			},
			labels: {
				items: [{
					html: 'million barrels change (year-on-year)', // Y Axis label
					style:  {
						left:  '-25px',
						top:  '-25px',
						color: 'rgb(0, 150, 215)',
						fontFamily: 'Arial'	
					} 
				}, {
					html: '$ per barrel change', // Y Axis label
					style:  {
						left:  '540px',
						top:  '-25px',
						color: 'rgb(189, 115, 42)',
						fontFamily: 'Arial'	
					} 
				},
				{
				  html: 'Source: <a href="http://www.eia.gov/">U.S. Energy Information Administration</a>, <a href="http://thomsonreuters.com/">Thomson Reuters</a>.',
				  style:  {
					left:  '-20px',
					top:  '305px',
					color: 'gray',
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				},
				{
				  html: 'Updated: quarterly | Last Updated: April 14, 2011',
				  style:  {
					left:  '-20px',
					top:  '317px',
					color: 'gray',					
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				}					
				]
			}, 
		   legend: {
			  enabled: true,
			  layout: 'horizontal',
			  align: 'center',
			  verticalAlign: 'bottom',	  
			  x: 0,
			  y: -25,
			  borderWidth: 0,
			  symbolPadding: 5,					
			  itemStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'none'
			  },
			  itemHoverStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'underline'
			  }
			},			
			tooltip: {
				 style: { 
					padding: 5,
					fontFamily: 'Arial'
				  },				
				formatter: function() {
            var val = {
               'OECD inventory': Math.abs(this.y.toFixed(0)) + ' Million barrels',
               'WTI crude 12th - 1st futures spread': '$' + Math.abs(this.y.toFixed(2)) + ' million per barrel'
            }[this.series.name],
						
							d = new Date(this.x),
							quarter = ( d.getMonth() / 3) + 1;
							
					//quarter = quarter + {1:'st',2:'nd',3:'rd',4:'th'}[quarter];

					if(this.y < 0) val = '-' + val; //add negative sign in front of value
					
					return '<b>' + this.series.name + '</b><br/>' + d.getFullYear() + ', quarter ' + quarter + '<br/>' + val;
         }
			},
			yAxis: [{ // Primary yAxis
         title: null,
				 max:200,
				 min: -200,
				 tickInterval: 50,
				 labels: {
					style:{ 
						color: 'rgb(0, 150, 215)',
						fontFamily: 'Arial'
					}
				}
      }, { // Secondary yAxis
         title: null,
         opposite: true,
				 min: -20,
				 max: 20,
				 tickInterval: 5,
				 labels: {
					style:{ 
						color: 'rgb(189, 115, 42)',
						fontFamily: 'Arial'
					}
				}
      }],
			plotOptions: {
				column: {
					shadow:0,
					borderWidth:0
				},
				line: {
					shadow:0,
					lineWidth: 2,
					marker: {
						enabled: false,
						states: {
							hover: {
								enabled: true,
								radius: 4
							}
						}
					},
					states: {
						hover: {
							lineWidth: 2,
							marker: {
									radius: 1
							}
						}
					}
				}
			},
			exporting: {
				buttons:{
					printButton: {
						enabled: false
					}
				}
			},
			navigation: {
				buttonOptions: {
					y: 0
				}
			},				
			colors:[
				'#5D9732',
				'#0096d7',
				'#003953',
				'#a33340',
				'#bd732a',
				'#103203',
				'#ffc702'
			],
		/* standard color palette: 
		rgba(93, 151, 50, 1.0) //green
		rgba(0, 150, 215, 1.0)  //light blue
		rgba(0, 57, 83, 1.0)  //dark blue
		rgba(163, 51, 64, 1.0)  //red
		rgba(189, 115, 42, 1.0)  //tan
		rgba(64, 50, 3, 1.0)  //brown
		rgba(255, 199, 2, 1.0)  //yellow
		*/				
			series: []
		},
		series1= {
			data: [],
			type: 'column',
			color: 'rgba(0, 150, 215, 1.0)',
			name: 'OECD inventory'
		},
		series2= {
			data: [],
			type: 'line',
			color: 'rgba(189, 115, 42, 1.0)',
			name: 'WTI crude 12th - 1st futures spread',
			yAxis: 1
		};
			
	$(window).load(function() {
		$.get( 'data.cfm?chart=inventory', function(data) {
			var vals = data.DATA;

			$.each(vals, function(lineNo, items) {
				date = Date.parse( parseInt(items[1])*3-2 +'/1/'+ items[0]),
					s1 = parseFloat(items[2]),
					s2 = parseFloat(items[3]);
					
				if ( !isNaN( date ) ){
					series1.data.push( [date, s1] );
					series2.data.push( [date, s2] );
				}
			});
			
			opts_inventory.series.push( series1 );
			opts_inventory.series.push( series2 );
			
			chart = new Highcharts.Chart(opts_inventory);
			
			chart.renderer.image('../..//global/images/icons/icon_interactive.gif', 625, 23, 69, 17)
			.add();
			
		},'json');
		
	});
	</script>

<div id="inventory"></div>