<script type="text/javascript">
		var chart,
		opts_nonoecd_demand = {
			chart: {
				renderTo: 'non-oecd_demand',
				zoomType: 'x',
                marginTop: 55,
				marginBottom: 85					
			},
			credits: {
			  enabled: false
			},			
			title: {
				text: 'Non-OECD consumption and GDP',
				align: 'left',
				y: 10,
				style:  {
				  color: 'black',
				  fontWeight: 'bold',
				  fontSize: '16px',
				  fontFamily: 'Arial'
				}
			},
			xAxis: {
				type: 'datetime',
				tickInterval: 365*24 * 3600 * 1000,
				lineColor: '#000000',
				labels: {
				  y: 20,
				  style: {
					color: 'black',
					fontFamily: 'Arial'
				  }
				}				
			},
			labels: {
				items: [{
					html: 'percentage change (year-on-year)', // Y Axis label
					style:  {
						left:  '-20px',
						top:  '-25px',
						color: 'black',
						fontSize: '12px',
						fontFamily: 'Arial'						
					} 
				},
				{
				  html: 'Source: <a href="http://www.eia.gov/">U.S. Energy Information Administration</a>,  <a href="http://www.ihsglobalinsight.com/">IHS Global Insight</a>.',
				  style:  {
					left:  '-20px',
					top:  '315px',
					color: 'gray',
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				},
				{
				  html: 'Updated: quarterly | Last Updated: April 14, 2011',
				  style:  {
					left:  '-20px',
					top:  '327px',
					color: 'gray',					
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				}					
				
				]
			}, 
		   legend: {
			  enabled: true,
			  layout: 'horizontal',
			  align: 'center',
			  verticalAlign: 'bottom',	  
			  x: 0,
			  y: -25,
			  borderWidth: 0,
			  symbolPadding: 5,					
			  itemStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'none'
			  },
			  itemHoverStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'underline'
			  }
			},			
			tooltip: {
				style: { 
				  padding: 5,
				  fontFamily: 'Arial'
				},				
				formatter: function() {
					var d = new Date(this.x),
							quarter = ( d.getMonth() / 3) + 1;
							
					//quarter = quarter + {1:'st',2:'nd',3:'rd',4:'th'}[quarter];
					
					return '<b>' + this.series.name + '</b><br/>'  + d.getFullYear() +', quarter ' + quarter + '<br/>' + this.y.toFixed(1) + '% change'; }
			},
			yAxis: { 
				title: null,
				min: -4,
				max: 12,
				tickInterval: 2,
				labels: {
				  style: {
					color: 'black',
					fontFamily: 'Arial'
				  }
				}				
			},
			plotOptions: {
				series:{
					marker: {
						enabled: false
					}
				},
				column:{
					shadow: 0,
					borderWidth:0
				},
				line: {
					shadow:0,
					lineWidth: 2,
					marker: {
						enabled: false,
						states: {
							hover: {
								enabled: true,
								radius: 4
							}
						}
					},
					states: {
						hover: {
							lineWidth: 2,
							marker: {
									radius: 1
							}
						}
					}
				}
			},
			exporting: {
				buttons:{
					printButton: {
						enabled: false
					}
				}
			},
			navigation: {
				buttonOptions: {
					y: 0
				}
			},			
			colors:[
				'#5D9732',
				'#0096d7',
				'#003953',
				'#a33340',
				'#bd732a',
				'#103203',
				'#ffc702'
			],
		/* standard color palette: 
		rgba(93, 151, 50, 1.0) //green
		rgba(0, 150, 215, 1.0)  //light blue
		rgba(0, 57, 83, 1.0)  //dark blue
		rgba(163, 51, 64, 1.0)  //red
		rgba(189, 115, 42, 1.0)  //tan
		rgba(64, 50, 3, 1.0)  //brown
		rgba(255, 199, 2, 1.0)  //yellow
		*/
			series: []
		},
		nocSeries= {
			data: [],
			type: 'column',
			color: 'rgba(0, 150, 215, 1.0)',	
			name: 'non-OECD consumption',
			id: 'noc'
		},
		nogSeries= {
			data: [],
			type: 'line',
			color: 'rgba(93, 151, 50, 1.0)',
			name: 'non-OECD GDP',
			id: 'nog'
		},
		breakLine = {
			data: [],
			type:'scatter',
			lineWidth: 1,
			color: '#7f7f7f',
			dashStyle: 'shortdash', 			
			shadow: 0,
			showInLegend: false,
		};
		
	$(window).load(function() {
		$.get( 'data.cfm?chart=non-oecd_demand2', function(data) {
			var vals = data.DATA,
					now = new Date(), 
					tmp;
			
			$.each(vals, function(lineNo, items) {
				var date = Date.parse( parseInt(items[1])*3-2 +'/1/'+ items[0]),
						noc = parseFloat(items[2]),
						nog = parseFloat(items[3]),
						tmpDate = new Date(date);
					
				if( tmpDate <= now )
					 tmp = date;
				//alert(tmp);
				if ( !isNaN( date ) ) {
					nogSeries.data.push( [date, nog] );
					nocSeries.data.push( [date, noc] );
				}
			});
		    
			opts_nonoecd_demand.series.push(nocSeries);
			opts_nonoecd_demand.series.push(nogSeries);
			
			chart = new Highcharts.Chart(opts_nonoecd_demand);

			//get y axis min/max values to draw the vertical separator
			var extremes = chart.yAxis[0].getExtremes();
			
			breakLine.data = [[tmp, extremes.min], [tmp, extremes.max]];
			
			chart.addSeries( breakLine );
			
			chart.renderer.image('../..//global/images/icons/icon_interactive.gif', 625, 23, 69, 17)
			.add();
			
		},'json');
	

	
	});
	
	</script>

<div id="non-oecd_demand"></div>