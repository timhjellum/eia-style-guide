<script type="text/javascript">
	  var chart,
			opts_nonoecd_demand_asia = {
			chart: {
				renderTo: 'asia_demand',
				zoomType: 'x',
                marginTop: 60,
				marginBottom: 95				
			},
			credits: {
			  enabled: false
			},			
			title: {
				text: 'GDP growth in Asia-ex Japan (annual expectations)',
				align: 'left',
				y: 15,
				style:  {
				  color: 'black',
				  fontWeight: 'bold',
				  fontSize: '16px',
				  fontFamily: 'Arial'
				}
			},
			xAxis: {
				type: 'datetime',
				tickInterval: 365*24 * 3600 * 1000,
				lineColor: '#000000',
				labels: {
				  y: 20,
				  style: {
					color: 'black',
					fontFamily: 'Arial'
				  }
				}				
			},
			labels: {
				items: [{
					html: 'percent', // Y Axis label
					style:  {
						left:  '-20px',
						top:  '-25px',
					    color: 'black',
					    fontFamily: 'Arial'							
					}
				},
				{
				  html: 'Source: <a href="http://www.ihs.com/">IHS Global Insight</a>, Published by: <a href="http://www.eia.gov/">U.S. Energy Information Administration</a>.',
				  style:  {
					left:  '-20px',
					top:  '300px',
					color: 'gray',
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				},				
				{
				  html: 'Updated: quarterly | Last Updated: April 14, 2011',
				  style:  {
					left:  '-20px',
					top:  '312px',
					color: 'gray',					
					fontSize: '10px',
					fontFamily: 'Arial'
				  }
				}					
				]
			},
		   legend: {
			  enabled: true,
			  layout: 'horizontal',
			  align: 'center',
			  verticalAlign: 'bottom',	  
			  x: 0,
			  y: -40,
			  borderWidth: 0,
			  symbolPadding: 5,					
			  itemStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'none'
			  },
			  itemHoverStyle: {
				fontFamily: 'Arial',
				color: '#189bd7',
				textDecoration: 'underline'
			  }
			},
			tooltip: {
				 style: { 
					padding: 5,
					fontFamily: 'Arial'
				  },				
				formatter: function() {
					var d = new Date(this.x),
							quarter = ( d.getMonth() / 3) + 1;
						
					//quarter = {1:'1st',2:'2nd',3:'3rd',4:'4th'}[quarter];
					
					return '<b>' + this.series.name + ' forecast' + '</b><br/>' +  this.y.toFixed(1) + ' million barrels per day'; 
				}
			},
			yAxis: { 
				title: null,
				min: 0,
				//max: 10,
				tickInterval: 1,
				labels: {
				  style: {
					color: 'black',
					fontFamily: 'Arial'
				  }
				},				
				startOnTick: false
			},
			plotOptions: {
				line: {
					shadow:0,
					borderWidth:0,
					marker: {
						enabled: false,
						states: {
							hover: {
								enabled: true,
								radius: 4
							}
						}
					},
					states: {
						hover: {
							lineWidth: 2,
							marker: {
									radius: 1
							}
						}
					}
				}
			},
			exporting: {
				buttons:{
					printButton: {
						enabled: false
					}
				}
			},
			navigation: {
				buttonOptions: {
					y: 0
				}
			},			
			colors:[
				'#5D9732',
				'#0096d7',
				'#003953',
				'#a33340',
				'#bd732a',
				'#103203',
				'#ffc702'
			],
			series: []
		};
			
	$(window).load(function() {
		$.get( 'data.cfm?chart=growth_asia', function(data) {
			var vals = data.DATA,
					year={},
					yearTmp=0,
					i = -1;
			
			$.each(vals, function(lineNo, items) {
				var date = new Date( items[1]*3-2 + '/1/' + items[0] ),
						val1 = parseFloat( items[2] );
				
				if(yearTmp != items[3] ){
					yearTmp = items[3];
					i++;
					
					year[i] = {
						data: [],
						type: 'line',
						name: items[3]
					};
				}
				
				if ( !isNaN( val1 ) ){
					year[i].data.push( [Date.parse(date), val1] );					
				}
			
			});
             
			for( i in year ){				
				opts_nonoecd_demand_asia.series.push(year[i]);
			}

			
			chart = new Highcharts.Chart(opts_nonoecd_demand_asia);
			
			chart.renderer.image('../..//global/images/icons/icon_interactive.gif', 625, 23, 69, 17)
			.add();
			
		},'json');

	});

	</script>

<div id="asia_demand"></div>