              <thead>
                <tr>
                  <th scope="col">...</th>
                  <th scope="col">...</th>
                  <th scope="col">...</th>
                  <th scope="col">...</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Col-1</td>
                  <td>Col-2</td>
                  <td>Col-3</td>
                  <td>Col-4</td>
                </tr>
                <tr>
                  <td>Col-1</td>
                  <td>Col-2</td>
                  <td>Col-3</td>
                  <td>Col-4</td>
                </tr>
              </tbody>
            </table>
          </div>
          <!-- end card -->
        </div>
        <!-- HTML -->
        <div class="uk-text-default uk-text-normal uk-text-uppercase copy-element">HTML</div>
        <pre><code class="language-html" id="ColumnHighlight">&lt;div class="basic-table"&gt;
  &lt;table class="basic-table full-width highlight-col-2  highlight-col-4"&gt;
